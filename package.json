{
	"name": "foam-habits",
	"version": "1.2.1",
	"description": "Terminal habit tracker for Foam daily notes with GitHub-style heatmap",
	"license": "MIT",
	"author": "Olavo Carvalho",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/olavocarvalho/foam-habits.git"
	},
	"homepage": "https://github.com/olavocarvalho/foam-habits#readme",
	"bugs": {
		"url": "https://github.com/olavocarvalho/foam-habits/issues"
	},
	"keywords": [
		"foam",
		"habits",
		"tracker",
		"cli",
		"terminal",
		"heatmap",
		"ink",
		"daily-notes"
	],
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "tsc && ava",
		"lint": "prettier --check . && xo",
		"prepublishOnly": "npm run build && npm test"
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"dependencies": {
		"date-fns": "^4.1.0",
		"ink": "^4.1.0",
		"ink-select-input": "^5.0.0",
		"ink-spinner": "^5.0.0",
		"js-yaml": "^4.1.1",
		"meow": "^11.0.0",
		"react": "^18.2.0",
		"string-width": "^8.1.0",
		"zod": "^4.3.4"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/js-yaml": "^4.0.9",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"files": [
			"dist/lib/__tests__/*.test.js"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
